<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('partial/head' , {pageTitle: "Author" }); %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include ('./partial/sidebar')%></div>
        <div class="col-sm-10">
          <h1>Author: <%=author.name%></h1>
          <p><%= author.dob %> - <%= author.dod %></p>
          <div style="margin: 20px 0 0 20px">
            <h4>Books</h4>
            <% if (author_books.length) {%>
            <dl>
              <% author_books.forEach(function(book){%>
              <dt>
                <a href="<%=book.url%>"><%=book.title%></a>
              </dt>
              <dd><%= book.summary%></dd>
              <%}) %>
            </dl>
            <% } else{%>
            <p>This author has no book.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

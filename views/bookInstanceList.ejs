<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ("partial/head", {pageTitle:title}) %>
    </head>
    <body>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include ('./partial/sidebar')%></div>
        <div class="col-sm-10">
        <h1><%=title%></h1>
        <% if(bookinstance_list.length) {%>
            <ul>
                <% bookinstance_list.forEach(function(bookinstance){ %>
                    <li>
                        <a href="<%=bookinstance.url%>">
                            <%=bookinstance.book.title%>:<%=bookinstance.imprint%> -&nbsp;
                        </a>
                        <% if( bookinstance.status=="Available") {%>
                            <span class="text-success"><%=bookinstance.status%></span> 
                        <%} else if( bookinstance.status=="Maintenance"){%>
                            <span class="text-danger"><%=bookinstance.status%></span>
                        <%} else {%>
                            <span class="text-warning"><%=bookinstance.status%></span>
                        <%}%>
                        <% if(bookinstance.status !="Available")%>
                            <span>(<%=bookinstance.due_date_formatted%>)</span>
                    </li>
                <%})%>
            </ul>
        <%} else {%>
            <p>There are no book copies in this library</p>
        <%}%>
        </div>
        </div>
    </div>
    
    </body>
</html>
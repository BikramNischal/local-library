<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('partial/head' , {pageTitle: title }); %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include ('./partial/sidebar')%></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <form method="POST">
            <div class="form-group">
              <label for="title">Title:</label>
              <input
                id="title"
                type="text"
                class="form-control"
                placeholder="Name of book"
                name="title"
                required
                value="<%= (locals.book) ? book.title : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="author">Author:</label>
              <select name="author" id="author" class="form-control" required>
                <option value="">--Please select an author--</option>
                <% authors.forEach(function(author){%> <% if(locals.book) {%>
                <%if(author._id.toString() === book.author._id.toString()){%>
                <option value="<%= author._id%>" selected>
                  <%= author.name%>
                </option>
                <%} else {%>
                <option value="<%= author._id%>"><%= author.name%></option>
                <%}} else {%>
                <option value="<%= author._id%>"><%= author.name%></option>
                <%}}) %>
              </select>
            </div>
            <div class="form-group">
              <label for="summary">Summary:</label>
              <textarea
                id="summary"
                class="form-control"
                placeholder="Summary"
                name="summary"
                required
              ><%= (locals.books)? book.summary : '' %></textarea>
            </div>
            <div class="form-group">
              <label for="isbn">ISBN:</label>
              <input
                type="text"
                class="form-control"
                id="isbn"
                placeholder="ISBN13"
                name="isbn"
                value="<%= (locals.books)? book.isbn: ''%>"
                required
              />
            </div>
            <div class="form-group">
              <label for="genre">Genre:</label>
              <div>
                <% genres.forEach(function(genre){%>
                <div style="display: inline; padding-right: 10px">
                  <% if(genre.checked){%>
                  <input
                    type="checkbox"
                    class="checkbox-input"
                    name="genre"
                    id="<%= genre._id %>"
                    value="<%= genre._id %>"
                    checked
                  />
                  <%} else{%>
                  <input
                    type="checkbox"
                    id="<%= genre._id%>"
                    class="checkbox-input"
                    name="genre"
                    value="<%=genre._id%> "
                  />
                  <% } %>
                  <label for="<%= genre._id %>">&nbsp; <%= genre.name %></label>
                </div>
                <%}) %>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          <% if(locals.errors){%>
          <ul>
            <% errors.forEach(function(error){%>
            <li><%= error.msg %></li>
            <%}) %>
          </ul>
          <%} %>
        </div>
      </div>
    </div>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('partial/head' , {pageTitle: genre.name}); %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include ('./partial/sidebar')%></div>
        <div class="col-sm-10">
          <h1>Genre: <%= genre.name %></h1>
          <div style="margin-left: 20px; margin-top: 20px">
            <h4>Books</h4>    
            <% if(genre_books.length){%>
               <dl>
                <% genre_books.forEach(function(book){%>
                    <dt>
                        <a href="<%= book.url %>"><%= book.title %></a>
                    </dt>
                    <dd>
                        <%=book.summary%>
                    </dd>
                <%}) %>
               </dl> 
                <% } else {%>
                    <p>This genre has no books.</p>
                <% } %>
        </div>
        </div>
      </div>
    </div>
  </body>
</html>

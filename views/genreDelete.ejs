<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('partial/head' , {pageTitle: title }); %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include ('./partial/sidebar')%></div>
        <div class="col-sm-10">
          <h1><%= title %>: <%=genre.name %></h1>
          <% if (genre_books.length) {%>
            <p><strong>Delete the following book before attempting to delete this Genre.</strong></p> 
            <div style="margin-left:20px; margin-top:20px">
                <h4>Books</h4>
                <dl>
                    <% genre_books.forEach(function(book){%>
                        <dt>
                            <a href="<%= book.url %>"><%=book.title %></a>
                        </dt>
                        <dd>
                            <%= book.summary%>
                        </dd>
                    <%}) %>
                </dl>
            </div>
            <% } else {%>
                <p>Do you really want to delete this Genre?</p>
                <form method="post">
                    <div class="form-group">
                        <input type="hidden" name="genreid" id="#genreid" class="form-control" value=<%= genre._id %>>
                    </div>
                    <button class="btn btn-primary" type="submit">Delete</button>
                </form>
                <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
